<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-contact-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add Business Contact</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-3">Name</th>
                        <th class="text-center col-2">Number</th>
                        <th class="text-center col-3">Email</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else{ %>
                        <th class="text-center col-3">Name</th>
                        <th class="text-center col-3">Number</th>
                        <th class="text-center col-4">Email</th>
                    <% } %>
                </tr>


                <% for(let count = 0; count < BCList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-3"><%= BCList[count].contactName%></td>
                            <td class="text-center col-2"><%= BCList[count].contactNumber %></td>
                            <td class="text-center col-3"><%= BCList[count].email %></td>

                            <td class="text-center col-1">
                                <a href="/business-contact-list/edit/<%= BCList[count]._id %>" class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i> Edit</a>

                            </td>
                            <td class="text-center col-1">
                                <a href="/business-contact-list/delete/<%= BCList[count]._id %>" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        <% } else {%>
                            <td class="text-center col-3"><%= BCList[count].contactName%></td>
                            <td class="text-center col-3"><%= BCList[count].contactNumber %></td>
                            <td class="text-center col-4"><%= BCList[count].email %></td>
                            <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>

  
