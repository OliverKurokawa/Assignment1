<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/coffee-list/add" class="btn btn-primary" role="button">
                    <i class="fas fa-plus-circle"></i> Add Coffee</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Bean Type</th>
                        <th class="text-center col-2">Roast Level</th>
                        <th class="text-center col-2">Roast Date</th>
                        <th class="col-1">Price/Kg</th>
                        <th class="text-center col-3">BrewGuide</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else{ %>
                        <th class="text-center col-2">Bean Type</th>
                        <th class="text-center col-2">Roast Level</th>
                        <th class="text-center col-2">Roast Date</th>
                        <th class="col-1">Price/Kg</th>
                        <th class="text-center col-5">BrewGuide</th>
                    <% } %>
                </tr>


                <% for(let count = 0; count < CoffeeList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= CoffeeList[count].beanType %></td>
                            <td class="text-center col-2"><%= CoffeeList[count].roastLevel %></td>
                            <td class="text-center col-2"><%= CoffeeList[count].roastDate %></td>
                            <td class="text-center col-1"><%= CoffeeList[count].pricePerKg %></td>
                            <td class="text-center col-3"><%= CoffeeList[count].brewGuide %></td>

                            <td class="text-center col-1">
                                <a href="/coffee-list/edit/<%= CoffeeList[count]._id %>" class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i> Edit</a>

                            </td>
                            <td class="text-center col-1">
                                <a href="/coffee-list/delete/<%= CoffeeList[count]._id %>" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        <% } else {%>
                            <td class="text-center col-2"><%= CoffeeList[count].beanType %></td>
                            <td class="text-center col-2"><%= CoffeeList[count].roastLevel %></td>
                            <td class="text-center col-2"><%= CoffeeList[count].roastDate %></td>
                            <td class="text-center col-1"><%= CoffeeList[count].pricePerKg %></td>
                            <td class="text-center col-5"><%= CoffeeList[count].brewGuide %></td>
                            <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>

  
